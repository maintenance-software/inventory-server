Item_ sql=t_item
    Id sql=item_id
    code Text
    name Text
    defaultPrice Double
    description Text Maybe
    images [Text]
    partNumber Text Maybe
    manufacturer Text Maybe
    model Text Maybe
    itemType ItemType
    notes Text Maybe
    status EntityStatus
    categoryId Category_Id Maybe
    unitId Unit_Id Maybe
    createdDate UTCTime
    modifiedDate UTCTime Maybe
    deriving Typeable Show

Inventory_ sql=t_inventory
    Id sql=inventory_id
    name Text
    description Text
    status EntityStatus
    allowNegativeStocks Bool
    createdDate UTCTime
    modifiedDate UTCTime Maybe
    UniqueInventoryName name
    deriving Typeable Show

