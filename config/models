InventoryItem_ sql=t_inventory_item
    itemId Item_Id
    Primary itemId
    level Int
    maxLevelAllowed Int
    minLevelAllowed Int
    price Double
    location Text
    dateExpiry UTCTime Maybe
    inventoryId Inventory_Id
    createdDate UTCTime
    modifiedDate UTCTime Maybe
    deriving Typeable Show

InventoryItemOrder_ sql=t_inventory_item_order
    Id sql=inventory_item_order_id
    quantity Int
    price Double
    discount Double
    subTotalPrice Double
    notes Text
    inventoryItemId Item_Id
    oderId Order_Id
    createdDate UTCTime
    modifiedDate UTCTime Maybe
    Foreign InventoryItem_ fkInventoryItem inventoryItemId
    deriving Typeable Show

Order_ sql=t_order
